              <script>
			  var total=0
                	$("#bt1").click(function(){ 
					total++
						$("#parkour").fadeOut('slow')
						$("#que_es").fadeIn('slow')
						$("#entrevista").fadeOut('slow')
						$("#personaje").fadeOut('slow')
						$("#galeria").fadeOut('slow')
						$("#frases").fadeOut('slow')
						$("#evento").fadeOut('slow')
					});
					$("#bt2").click(function(){ 
					total++
						$("#parkour").fadeOut('slow')
						$("#que_es").fadeOut('slow')
						$("#entrevista").fadeIn('slow')
						$("#personaje").fadeOut('slow')
						$("#galeria").fadeOut('slow')
						$("#frases").fadeOut('slow')
						$("#evento").fadeOut('slow')
					});
					$("#bt3").click(function(){ 
					total++
						$("#parkour").fadeOut('slow')
						$("#que_es").fadeOut('slow')
						$("#entrevista").fadeOut('slow')
						$("#personaje").fadeIn('slow')
						$("#galeria").fadeOut('slow')
						$("#frases").fadeOut('slow')
						$("#evento").fadeOut('slow')
					});
					$("#bt4").click(function(){
						total++ 
						$("#parkour").fadeOut('slow')
						$("#que_es").fadeOut('slow')
						$("#entrevista").fadeOut('slow')
						$("#personaje").fadeOut('slow')
						$("#galeria").fadeIn('slow')
						$("#frases").fadeOut('slow')
						$("#evento").fadeOut('slow')
					});
					$("#bt5").click(function(){
						total++
						$("#parkour").fadeOut('slow') 
						$("#que_es").fadeOut('slow')
						$("#entrevista").fadeOut('slow')
						$("#personaje").fadeOut('slow')
						$("#galeria").fadeOut('slow')
