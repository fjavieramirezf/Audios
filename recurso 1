						$("#entrevista").fadeOut('slow')
						$("#personaje").fadeOut('slow')
						$("#galeria").fadeOut('slow')
						$("#frases").fadeOut('slow')
						$("#evento").fadeOut('slow')
					});
					
					$("#parkour").hover(function(){ 
					if(total>=6){
						$("#roll").fadeIn('slow')
					}
					}, function(){
					if(total>=6){ 
						$("#roll").fadeOut('slow')
					}
					});
                </script>
                
